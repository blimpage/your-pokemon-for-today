{% block gallery %}
  {% for number, data in pokemons %}
    <div
      class='pokemon'
      data-thumb-url='{{data.thumb_filepath}}'
      {% if data.has_kc_image %}
        data-has-kc-image='{{data.has_kc_image}}'
        data-type='{{data.type_1}}'
      {% endif %}
      {% if data.has_kc_image or render_names_for_non_kc %}
        data-name='{{data.name}}'
        data-dex-number='{{data.dex_number}}'
      {% endif %}
      {% if data.dex_number == "093" or data.dex_number == "756" or data.dex_number == "687" %}
        data-image-bg='black'
      {% endif %}
      >

      {% if data.has_kc_image %}
        <a href='{{data.full_filepath}}' title='{{data.name}}'>
          {{data.name}}
        </a>
      {% endif %}

    </div>
  {% endfor %}
{% endblock %}
