{% block gallery %}
  <div class='pokemon-container'>
    {% for number, data in pokemons %}
      <div
        class='pokemon'
        data-name='{{data.name}}'
        data-has-kc-image='{{data.has_kc_image}}'
        data-thumb-url='{{data.thumb_filepath}}'
        data-dex-number='{{data.dex_number}}'
        data-type='{{data.type_1}}'>

        {% if data.has_kc_image %}
          <a href='{{data.full_filepath}}' title='{{data.name}}'>
            {{data.name}}
          </a>
        {% endif %}

      </div>
    {% endfor %}
  </div>
{% endblock %}
