{% block gallery %}
  <div class='pokemon-container'>
    {% for number, data in pokemons %}
      {% if data.filename %}
        <a href='images/kc/{{data.filename}}' class='pokemon pokemon--kc' data-thumb='images/kc/thumbs/{{data.filename}}' title='{{data.name}}' data-dex-number='#{{data.dex_number}}' data-type='{{data.type_1}}'>
          {{data.name}}
        </a>
      {% else %}
        <div class='pokemon pokemon--sugimori' data-thumb='{{data.sugimori_filename}}'></div>
      {% endif %}
    {% endfor %}
  </div>
{% endblock %}
